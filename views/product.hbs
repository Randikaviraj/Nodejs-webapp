        document.getElementById("q4").innerHTML="Quntity +";
        document.getElementById("w1").innerHTML=0;
        document.getElementById("w2").innerHTML=0;
    });




    document.getElementById("q1").addEventListener("click",function(){
        var x=document.getElementById("q1").getAttribute("value")
        x=Number(x)+1
        document.getElementById("q1").setAttribute("value",x)
        document.getElementById("q1").innerHTML="Quntity "+x;
        
        document.getElementById("b1").addEventListener("click",()=>{
            document.getElementById("o1").innerHTML=x;
            document.getElementById("o2").innerHTML=x*55;})
        });
       
    document.getElementById("q2").addEventListener("click",function(){
        var x=document.getElementById("q2").getAttribute("value")
        x=Number(x)+1
        document.getElementById("q2").setAttribute("value",x)
        document.getElementById("q2").innerHTML="Quntity "+x;
        
        document.getElementById("b2").addEventListener("click",()=>{
            document.getElementById("a1").innerHTML=x;
            document.getElementById("a2").innerHTML=x*55;})
        });

    document.getElementById("q3").addEventListener("click",function(){
        var x=document.getElementById("q3").getAttribute("value")
        x=Number(x)+1
        document.getElementById("q3").setAttribute("value",x)
        document.getElementById("q3").innerHTML="Quntity "+x;
        
