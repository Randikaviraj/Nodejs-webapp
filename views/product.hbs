<script>
    document.getElementById("r1").addEventListener("click",function(){
        document.getElementById("q1").setAttribute("value",0);
        document.getElementById("q1").innerHTML="Quntity +";
        document.getElementById("o1").innerHTML=0;
        document.getElementById("o2").innerHTML=0;
        
    });
     document.getElementById("r2").addEventListener("click",function(){
        document.getElementById("q2").setAttribute("value",0);
        document.getElementById("q2").innerHTML="Quntity +";
        document.getElementById("a1").innerHTML=0;
        document.getElementById("a2").innerHTML=0;
    });
     document.getElementById("r3").addEventListener("click",function(){
        document.getElementById("q3").setAttribute("value",0);
