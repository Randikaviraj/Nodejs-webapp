<div>
    <table class="table table-hover table-dark" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Selected Product Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total Cash</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Orange</td>
      <td id="o1">0</td>
      <td id="o2">0</td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Apple</td>
      <td id="a1">0</td>
      <td id="a2">0</td>
    </tr>
     <tr>
      <th scope="row">3</th>
      <td>Strabary</td>
